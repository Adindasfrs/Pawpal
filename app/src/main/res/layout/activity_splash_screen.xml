<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6DAC8"
    tools:context=".userinterface.SplashScreenActivity">

    <TextView
        android:id="@+id/bottomSplashScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:alpha="0"
        android:text="@string/bottomSplash"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bangkit"
        android:layout_width="345dp"
        android:layout_height="398dp"
        android:layout_marginBottom="132dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomSplashScreen"
        app:layout_constraintEnd_toEndOf="@+id/bottomSplashScreen"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/bottomSplashScreen"
        app:srcCompat="@drawable/pawpal" />


</androidx.constraintlayout.widget.ConstraintLayout>