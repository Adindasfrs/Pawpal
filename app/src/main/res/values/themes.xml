<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pawpal" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button</item>
        <item name="colorPrimaryVariant">@color/button</item>
        <item name="colorOnPrimary">@color/button</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button</item>
        <item name="colorSecondaryVariant">@color/button</item>
        <item name="colorOnSecondary">@color/button</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/button</item> <!-- Ubah warna status bar di sini -->
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/button</item>
    </style>

    <style name="recyclerView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbarSize">0dp</item>
    </style>

    <style name="Theme.Pawpal.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Pawpal.AppWidgetContainer" parent="Theme.Pawpal.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

</resources>
